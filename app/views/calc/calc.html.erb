<header class='q_one'>Tell us when you're usually available during the week.</header>

<%= form_tag("/calc", {method: :post} ) do %>

<div class='availablity'>

<%= radio_button_tag(:availablity, 'weekends') %>
<%= label_tag(:weekends, "I'm a weekend warrior.") %>

<%= radio_button_tag(:availablity, 'week_day_evenings') %>
<%= label_tag(:week_day_evenings, "I am available in the evenings.") %>

<%= radio_button_tag(:availablity, 'week_days') %>
<%= label_tag(:week_days, "I am availabls on the week days.") %>

<%= radio_button_tag(:availablity, 'open') %>
<%= label_tag(:open, "I'm free as a bird, let's fill up my scehdule.") %>

